<?xml version="1.0" encoding="utf-8"?>
<layer-list
   xmlns:android="http://schemas.android.com/apk/res/android">

   <!--
      Creates a ripple effect when the
      button is pressed.
    -->
   <item>
      <ripple android:color="?colorPrimary" />
   </item>

   <item
      android:id="@+id/icon"
      android:width="24dp"
      android:height="24dp"
      android:drawable="@drawable/ic_pin"
      android:gravity="top|center_horizontal"
      />

</layer-list>